{
  "name": "union-clubgg-backend",
  "version": "1.0.0",
  "description": "Backend API for Union.clubgg Automation Dashboard",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run clean && npm run copy-files && npm run validate-build",
    "clean": "rimraf dist",
    "copy-files": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist',{recursive:true});const copyRecursive=(src,dest)=>{const stats=fs.statSync(src);if(stats.isDirectory()){if(!fs.existsSync(dest))fs.mkdirSync(dest);fs.readdirSync(src).forEach(file=>copyRecursive(path.join(src,file),path.join(dest,file)))}else{fs.copyFileSync(src,dest);}};copyRecursive('src','dist');fs.copyFileSync('package.json','dist/package.json');\"",
    "validate-build": "node -e \"const fs=require('fs');if(!fs.existsSync('dist/server.js')){console.error('Build failed: dist/server.js not found');process.exit(1);}console.log('Build validation successful');\"",
    "test": "jest"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.3"
  },
  "vercel": {
    "functions": {
      "api/index.js": {
        "runtime": "nodejs18.x"
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "poker",
    "settlement",
    "dashboard",
    "api",
    "mysql"
  ],
  "author": "Union.clubgg",
  "license": "MIT"
}
